  PasarASiguienteFila()
  ComerFilaDe(4)
  PasarASiguienteFila()
  ComerFilaDe(7)
  PasarASiguienteFila()
  ComerFilaDe(2)
  PasarASiguienteFila()
  ComerFilaDe(8)
  PasarASiguienteFila()
  ComerFilaDe(5)
  PasarASiguienteFila()
  ComerFilaDe(6)
  PasarASiguienteFila()
  ComerFilaDe(3)
  PasarASiguienteFila()
  ComerFilaDe(4 )
}

procedure PasarASiguienteFila()
{ MoverANanoHaciaArriba() }

procedure ComerFilaDe(cantBananas)
{
  repeat (cantBananas)
   { 
     MoverANanoALaDerecha()
     ComerBanana()
   }
  VolverANanoAlBordeIzquierdo()
}


