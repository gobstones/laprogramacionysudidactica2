program {
  cartaDeLaIzquierda := cartaActual()
  PasarASiguientePosición()
  cartaDeLaDerecha := cartaActual()
  DecirElEnvido_(envidoSimple(cartaDeLaIzquierda, cartaDeLaDerecha))
}

function envidoSimple(cartaIzquierda, cartaDerecha) {
