program {
IrALaBaseDeLaDiagonalInferior()
SubirEncendiendoDiagonalInferior()
IrAlTopeDeLaDiagonalSuperior()
BajarEncendiendoDiagonalSuperior()
}

procedure IrALaBaseDeLaDiagonalInferior() {
MoverALuchoAl(Este)
MoverALuchoAl(Este)
}

procedure SubirEncendiendoDiagonalInferior() {
EncenderLuz()
MoverALuchoAl(Norte)
MoverALuchoAl(Este)
EncenderLuz()
MoverALuchoAl(Norte)
MoverALuchoAl(Este)
EncenderLuz()
MoverALuchoAl(Norte)
MoverALuchoAl(Este)
EncenderLuz()
}

procedure IrAlTopeDeLaDiagonalSuperior() {
MoverALuchoAl(Oeste)
MoverALuchoAl(Oeste)
MoverALuchoAl(Norte)
}

procedure BajarEncendiendoDiagonalSuperior() {
EncenderLuz()
MoverALuchoAl(Sur)
MoverALuchoAl(Oeste)
EncenderLuz()
MoverALuchoAl(Sur)
MoverALuchoAl(Oeste)
EncenderLuz()
MoverALuchoAl(Sur)
MoverALuchoAl(Oeste)
EncenderLuz()
}